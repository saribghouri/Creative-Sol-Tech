// All external urls should open in new tab
jQuery(document).ready(function ($) {
    $('a').each(function () {
        var linkHost = this.hostname; // Get the hostname of the link
        if (linkHost && linkHost !== location.hostname) {
            $(this).attr('target', '_blank'); // Open in a new tab
        }
    });
});
// All external urls should open in new tab